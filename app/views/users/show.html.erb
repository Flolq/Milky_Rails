<div class="container">
  <div>
  <% if @user.photo.attached? %>
    <%= cl_image_tag @user.photo.key, height: 300, width: 400, crop: :fill %>
  <% end %>
  </div>
  <div>
    <div>
      <h2>User detail</h2>
    </div>
    <div>
      <p><%= @user.first_name %> <%= @user.last_name %> </p>

    </div>
  </div>
  <h2>Your proposed trips</h2>
  <div class="row">
    <% @user.my_trips.each do |trip| %>
      <div class="col-4">
        <div class="trip-card">
          <div class="trip-card-img" style="background-image: url(<%= image_path 'space.jpg' %>);"></div>
          <div class="trip-card-content">
            <h3><%= link_to "Trip to #{trip.destination}", trip_path(trip) %></h3>
            <p>Minimum duration : <%= trip.min_duration %></p>
            <p>Maximum capacity of the spaceship : <%= trip.shuttle.max_capacity %></p>
            <div class="trip-card-price"> <%= number_with_delimiter(trip.price_per_day, :delimiter => ' ') %> Galactic credits / day</p></div>
            </div>
          </div>
        </div>
      <% end %>
  </div>

  <%= link_to "Create a trip", new_user_trip_path(@user) %>
  <%= link_to "Delete user",
            user_path(@user),
            method: :delete,
            data: { confirm: "Are you sure?" }  %>
  <%= link_to "Back to users", users_path  %>

</div>
