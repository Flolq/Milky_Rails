<div class="container">

  <div class="card-congrats center">

    <h1> Welcome on board ! </h1>
    <div>
        <h3>Booking details</h3>
      <div>
        <p>Your destination : <%= @trip.destination %></p>
        <p>Booking dates : from  <%= @start_date %> to <%= @end_date %> </p>
        <p>Number of travellers : <%= @number %></p>
      </div>
      <div>
        <h3>Total price = <%=number_with_delimiter(@trip.price_per_day * @duration, :delimiter => ' ') %> Galactic credits</h3>
      </div>
    </div>
    <div class="small-btn-transparent"><span><%= link_to "Back to homepage", trips_path %></span></div>
    <div class="small-btn-transparent"><span><%= link_to "Your trips", user_path(@user)%></span></div>

  </div>

</div>
